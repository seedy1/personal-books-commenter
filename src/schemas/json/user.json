{
    "$schema": "http://json-schema.org/schema",
    "$id": "users",
    "type": "object",
    "required": ["email", "password"],
    "additionalProperties": false,
    "properties": {
        "fullname": { "type": "string" },
        "email": { "type": "string" },
        "password": { "type": "number" },
        "loginToken": { "type": "number" }
    }
}